<form name="myForm" ng-submit="register()" class="container">
    <div class="form-group">
        <label for="emailAddress">Email Address:</label>
        <input class="form-control inputField" id="emailAddress" type="email" name="email" ng-model="registerForm.emailAddress" required />
        <span ng-show="myForm.email.$invalid && myForm.email.$dirty">Email is incorrect</span>
    </div>

    <div class="form-group">
        <label for="password">Password:</label>
        <input class="form-control inputField" id="password" type="password" name="password" ng-model="registerForm.password" required ng-minlength="6" ng-pattern="/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*\W)[a-zA-Z\d\W]{6,}$/" />
        <span ng-show="myForm.password.$invalid && myForm.password.$dirty">Must have at least 6 symbols, lowercase, uppercase, digit, special</span>
    </div>

    <div class="form-group">
        <label for="confirmPassword">Confirm Password:</label>
        <input class="form-control inputField" id="confirmPassword" type="password" name="password2" ng-model="registerForm.confirmPassword" required />
        <span ng-show="registerForm.password !== registerForm.confirmPassword">Passwords differ</span>
    </div>


    <button class="btn" type="submit" ng-disabled="myForm.email.$invalid || myForm.password.$invalid || registerForm.password !== registerForm.confirmPassword">Register</button>
    <a href="#!login">Already have an account?</a>
</form>



