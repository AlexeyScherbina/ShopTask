<form name="myForm" ng-submit="login()" novalidate class="container">

    <div class="form-group">
        <label for="emailAddress">Email Address:</label>
        <input class="form-control inputField" type="email" name="email" ng-model="loginForm.emailAddress" id="emailAddress" required />
        <span ng-show="myForm.email.$invalid && myForm.email.$dirty">Email is incorrect</span>
    </div>

    <div class="form-group">
        <label for="password">Password:</label>
        <input class="form-control inputField" type="password" id="password" name="password" ng-model="loginForm.password" required ng-minlength="6" ng-pattern="/^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*\W)[a-zA-Z\d\W]{6,}$/" />
        <span ng-show="myForm.password.$invalid && myForm.password.$dirty">Must have at least 6 symbols, lowercase, uppercase, digit, special</span>
    </div>


    <button class="btn" type="submit" ng-disabled="myForm.email.$invalid || myForm.password.$invalid">Login</button>
    <a href="#!register">Create new account</a>
    <div>Seller account: sell@sell.sell Sell1!</div>
</form>